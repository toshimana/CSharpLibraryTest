<Window x:Class="CSharpLibraryTest.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:uc="clr-namespace:CSharpUserControlLibrary;assembly=CSharpUserControlLibrary"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title.Value}" Height="350" Width="525" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <uc:PathLoader Grid.Row="0" Grid.Column="0" Path="{Binding Path.Value, Mode=TwoWay}" LoadCommand="{Binding LoadCommandA}"/>
        <uc:CvImage Grid.Row="1" Grid.Column="0" MatImage="{Binding Image.Value}"/>
        <ContentControl prism:RegionManager.RegionName="ContentRegion" />
    </Grid>
</Window>
